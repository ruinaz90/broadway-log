<%- include("partials/header.ejs") %> 

<h1>Broadway Log</h1>

<h2>Shows seen</h2>
<h3>Total seen: <%= totalSeen %> </h3>
    <% for(let show of shows) { %>
        <div class="show" data-id="<%= show._id %>">
            <p><%= show.showName %></p>
            <!--<p><%= show.dateSeen.toUTCString() %></p>-->
            <p><%= show.dateSeen.toString().slice(0, 15) %></p>
            <p><%= show.location %></p>
            <a href="#" class="del">delete</a>
        </div>
    <% } %>

<h2>Add a show</h2>
<form action="/log/add-show" method="POST">
    <input type="text" placeholder="Enter name of show" name="show_name">
    <input type="date" name="date">
    <input type="text" placeholder="Location" name="location">
    <input type="submit">
</form>

<%- include("partials/footer.ejs") %>